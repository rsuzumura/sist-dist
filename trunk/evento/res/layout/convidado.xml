<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/darker_gray">

    <include
        android:layout_width="match_parent"
        layout="@layout/comandos" />
    
	<TableLayout
		android:layout_width="match_parent"
        android:layout_height="wrap_content" >
	
            <TextView
                android:id="@+id/editNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:text="@string/lblNome" />

            <TextView
                android:id="@+id/editMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:text="@string/lblMail"/>

            <TextView
                android:id="@+id/editPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:text="@string/lblTelefone" />

            <TextView
                android:id="@+id/editOrigem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:text="@string/lblOrigem" />

            <TextView
                android:id="@+id/editFuncao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:text="@string/lblFuncao" />

    </TableLayout>

    <Button
		android:id="@+id/btnEditar"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:text="@string/btnEditar"
		android:layout_gravity="right"/>


</LinearLayout>